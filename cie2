#include <stdio.h>
#include <omp.h>

#define N 10

int main() {
    int A[N];
    for (int i = 0; i < N; i++) A[i] = i + 1;

    // Dynamic scheduling
    #pragma omp parallel for schedule(dynamic,2)
    for (int i = 0; i < N; i++) {
        A[i] = 3 * A[i] + 2;
        printf("Dynamic: Thread %d processed A[%d]\n", omp_get_thread_num(), i);
    }

    // Static scheduling
    #pragma omp parallel for schedule(static,2)
    for (int i = 0; i < N; i++) {
        A[i] = 3 * A[i] + 2;
        printf("Static: Thread %d processed A[%d]\n", omp_get_thread_num(), i);
    }

    return 0;
}
